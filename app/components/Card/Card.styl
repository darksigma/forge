.Card
	position: absolute
	padding: 12px
	pointer-events: none

	&.selected
		> .CardInner
			border: 2px solid alpha($link-color, 0.5) !important

	&.hovered
		> .CardInner
			border: 2px solid alpha($link-color, 0.3)

	&.dragging
		> .CardInner
			background: alpha($link-color, 0.5)
			> *
				display: none !important


	> .CardInner
		width: 100%
		height: 100%
		pointer-events: auto

		display: flex
		flex-direction: column
		border: 2px solid transparent

		background: white
		box-shadow-level(2)
		border-radius: 4px

		cursor: pointer
		cursor: -webkit-grab

		&:active
			cursor: -webkit-grabbing

		> .Header
			display: flex
			align-items: center
			padding: 8px

			> .Icon
				flex-grow: 0
				flex-shrink: 0
				width: 20px
				height: 20px

			> .Name
				flex-grow: 1
				flex-shrink: 0
				font-size: $default-font-size

				margin-left: 4px
				color: $default-text-color

			> .CardOutput
				margin-right: 2px



		> .CardUI
			flex-grow: 1
			flex-shrink: 0

			display: flex
			flex-direction: column

			padding: 0px 8px

			> *
				flex-grow: 1
				flex-shrink: 0
