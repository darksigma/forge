.Card
	position: absolute
	padding: 12px
	pointer-events: none

	&.selected
		> .CardInner
			border: 2px solid blue(0.5)

	> .CardInner
		width: 100%
		height: 100%
		pointer-events: auto

		display: flex
		flex-direction: column
		border: 2px solid transparent

		background: white
		box-shadow-level(2)
		border-radius: 4px

		cursor: pointer
		cursor: -webkit-grab

		&:active
			cursor: -webkit-grabbing

		> .Header
			display: flex
			align-items: center
			padding: 8px

			> .Icon
				flex-grow: 0
				flex-shrink: 0
				width: 20px
				height: 20px
				border-radius: 4px
				background: #FFA566

			> .Name
				flex-grow: 1
				flex-shrink: 0

				margin-left: 8px
				color: $default-text-color

			> .CardOutput
				margin-right: 2px



		> .CardUI
			flex-grow: 1
			flex-shrink: 0

			display: flex
			flex-direction: column

			padding: 0px 8px

			> *
				flex-grow: 1
				flex-shrink: 0
